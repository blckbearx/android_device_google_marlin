<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">

    <!-- AOSP WFD -->
    <bool name="config_enableWifiDisplay">true</bool>

    <!-- Whether the device supports Smart Pixels -->
    <bool name="config_supportSmartPixels">true</bool>

    <!-- Whether the device supports Smart charging -->
    <bool name="config_smartChargingAvailable">true</bool>

    <!-- Smart charging sysfs node and value for suspend/resume charging -->
    <string name="config_smartChargingSysfsNode" translatable="false">/sys/class/power_supply/battery/battery_charging_enabled</string>
    <string name="config_smartChargingSuspendValue" translatable="false">0</string>
    <string name="config_smartChargingResumeValue" translatable="false">1</string>

    <!-- Whether device has dash charging support / I know this is the wrong fast charging standard but I think it's the most generic of all to use for this -->
    <bool name="config_hasDashCharger">true</bool>

    <!-- Path to fast charging status file to detect whether an oem fast charger is active -->
    <string name="config_oemFastChargerStatusPath" translatable="false">/sys/class/power_supply/usb/voltage_max</string>

    <!-- Path to fast charging status file to detect whether an oem fast charger is active -->
    <string name="config_oemFastChargerStatusPath2" translatable="false">/sys/class/power_supply/usb/voltage_max</string>

    <!-- Expected value from fast charging status file  -->
    <string name="config_oemFastChargerStatusValue" translatable="false">9100000</string>

    <!-- Specify if the fingerprint hardware support gestures-->
    <bool name="config_fingerprintSupportsGestures">true</bool>

    <!-- Live Captions provided by Google's Device Personalization Service package  -->
    <string name="config_defaultSystemCaptionsManagerService">com.google.android.as/com.google.android.apps.miphone.aiai.captions.SystemCaptionsManagerService</string>
    <string name="config_defaultSystemCaptionsService">com.google.android.as/com.google.android.apps.miphone.aiai.captions.CaptionsService</string>

    <!-- Recents text and image selection for Pixel Launcher (not supported by Launcher3) -->
    <string name="config_defaultContentSuggestionsService" translatable="false">com.google.android.as/com.google.android.apps.miphone.aiai.app.AiAiContentSuggestionsService</string>

</resources>
